    script(src='/js/calls/controllers/shell.client.controller.js')
    script(src='/js/calls/directives/jplayer.js')
    script(src='/js/calls/directives/focus.js')
    script(src='/js/calls/directives/loading.js')
    script(src='/js/calls/controllers/calls.client.controller.js')
    script(src='/js/calls/controllers/history.client.controller.js')
    script(src='/js/calls/controllers/search.client.controller.js')
