doctype html
html
  head
    link(rel='stylesheet', href='/lib/css/bootstrap.css')
    link(rel='stylesheet', href='/lib/css/font-awesome.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/search.css')
  body(ng-app='calls', ng-controller='ShellController')
    header(class='navbar navbar-fixed-top navbar-default')
      div(class='container')
        div(class='navbar-header')
          a(class='navbar-brand', href='/') Clarify-WebRTC
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            if (user)
              li(ng-class="{'active': tab=='/'}", ng-click="tabClick('/')")
                a(href='#/') Contacts
              li(ng-class="{'active': tab=='/history'}", ng-click="tabClick('/history')")
                a(href='#/history') Calls
              li(ng-class="{'active': tab=='/search'}", ng-click="tabClick('/search')")
                a(href='#/search') Search

          ul.nav.navbar-nav.navbar-right
            if (user)
              li
                a(href='/sign_out') Sign out
            else
              li
                a(href='/sign_in') Sign in
              li
                a(href='/sign_up') Sign up

    .content
      block content

    script(src='/lib/js/socket.io.js')
    script(src='/lib/js/jquery.js')
    script(src='/lib/js/bootstrap.min.js')
    script(src='/lib/js/jquery.jplayer.js')
    script(src='/lib/js/lodash.js')
    script(src='/lib/js/moment.min.js')
    script(src='/lib/js/angular.js')
    script(src='/lib/js/angular-resource.js')
    script(src='/lib/js/angular-ui-router.js')
    script(src='/lib/js/socket.js')
